import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int n1=0;
        int n2=1;
        int s=1;
        for(int i=1;i<n;i++){
            int n3=n1+n2;
            n1=n2;
            n2=n3;
            s+=n3;
        }
        System.out.println("sum of n fibonacci numbers is :"+s);
    }
}
